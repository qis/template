# Clang-Format 19
---
Standard: Latest
ColumnLimit: 120
LineEnding: LF
UseTab: Never

TabWidth: 8
IndentWidth: 2
AccessModifierOffset: -2
ContinuationIndentWidth: 2
InsertNewlineAtEOF: true

# Functions
AllowShortFunctionsOnASingleLine: Empty
AllowShortLambdasOnASingleLine: Empty

# Arguments
AlignAfterOpenBracket: DontAlign
AllowAllArgumentsOnNextLine: false
AllowAllParametersOfDeclarationOnNextLine: false
PackConstructorInitializers: CurrentLine
BinPackParameters: true
BinPackArguments: true

# Alignment
AlignArrayOfStructures: Left
BitFieldColonSpacing: None
PointerAlignment: Left

# Case
AllowShortCaseExpressionOnASingleLine: true
AllowShortCaseLabelsOnASingleLine: true
AlignConsecutiveShortCaseStatements:
  Enabled: true
  AcrossComments: true
  AcrossEmptyLines: true
  AlignCaseColons: false

# Breaks
AllowShortCompoundRequirementOnASingleLine: true
AllowShortIfStatementsOnASingleLine: Never
AlwaysBreakBeforeMultilineStrings: true
BreakAfterAttributes: Never
BreakAfterReturnType: None
BreakBeforeBinaryOperators: None
BreakBeforeTernaryOperators: true
BreakConstructorInitializers: AfterColon
BreakInheritanceList: AfterColon
BreakTemplateDeclarations: Yes

# Braces
BreakBeforeBraces: Custom
BraceWrapping:
  # Other AfterControlStatement values
  # break AllowShortCompoundRequirementOnASingleLine.
  AfterControlStatement: Never
  BeforeCatch: true

# Qualifiers
QualifierAlignment: Custom
QualifierOrder: [ friend, static, constexpr, inline, const, type ]

# Preprocessor
IndentPPDirectives: None
SkipMacroDefinitionBody: true

# Empty Lines
EmptyLineBeforeAccessModifier: LogicalBlock
SeparateDefinitionBlocks: Always
MaxEmptyLinesToKeep: 2

# Comments
ReflowComments: false
SpacesBeforeTrailingComments: 2

# Integers
IntegerLiteralSeparator:
  Binary: 8
  BinaryMinDigits: 9
  Decimal: 3
  DecimalMinDigits: 4
  Hex: 8
  HexMinDigits: 9

# Includes
SortIncludes: CaseInsensitive
IncludeBlocks: Preserve
IncludeCategories:
  # Relative Paths
  - Regex: '^"'
    Priority: 0

  # Project
  - Regex: '^<core/'
    Priority: 1

  # C Standard Library
  - Regex: '^<(assert|complex|ctype|errno|fenv|float|inttypes|iso646|limits|locale|math|setjmp|signal|stdalign|stdarg|stdatomic|stdbit|stdbool|stdckdint|stddef|stdint|stdio|stdlib|stdmchar|stdnoreturn|string|tgmath|threads|time|uchar|wchar|wctype)\.h>'
    Priority: 5

  # C Standard Library (C++ Wrappers)
  - Regex: '^<c(assert|complex|ctype|errno|fenv|float|inttypes|iso646|limits|locale|math|setjmp|signal|stdalign|stdarg|stdbool|stddef|stdint|stdio|stdlib|string|tgmath|time|uchar|wchar|wctype)>$'
    Priority: 4

  # C++ Standard Library
  - Regex: '^<[^\.\/]+>$'
    Priority: 3

  # Windows Sockets
  - Regex: '^<(winsock2|ws2tcpip)\.h>$'
    Priority: 6

  # Windows
  - Regex: '^<windows\.h>$'
    Priority: 7

  # Windows NT
  - Regex: '^<ntstatus\.h>$'
    Priority: 8

  # Windows Kernel
  - Regex: '^<winternl\.h>$'
    Priority: 9

  # Windows Core
  - Regex: '^<(lmcons|tchar)\.h>$'
    Priority: 10

  # Windows System
  - Regex: '^<(bcrypt|ncrypt|pdh|psapi|tlhelp32|wincrypt)\.h>$'
    Priority: 11

  # Windows Networking
  - Regex: '^<iphlpapi\.h>$'
    Priority: 12

  # Windows OLE
  - Regex: '^<(objbase|ole2)\.h>$'
    Priority: 13

  # Windows Common Controls
  - Regex: '^<(commctrl|shellapi|shlobj|windowsx)\.h>$'
    Priority: 14

  # Windows Graphics
  - Regex: '^<(gdiplus|dwrite|d2d1|d3d11)\.h>$'
    Priority: 15

  # Third Party
  - Regex: '^<.*\..*>$'
    Priority: 2
...
